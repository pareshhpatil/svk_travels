<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="myFileAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date{Y-m-d H:i:s,u} [%pid] [%level] [%logger] %message%newline%ex" />
        </layout>
        <param name="file" value="../../logs/siddhivinayak2.local.log" />
    </appender>
    <root>
        <level value="DEBUG" />
        <appender_ref ref="myFileAppender" />
    </root>
</configuration>
